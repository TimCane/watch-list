    "schemas": {
      "AuthenticateRequest": {
        "required": [
          "emailAddress",
          "password"
        ],
        "type": "object",
        "properties": {
          "emailAddress": {
            "minLength": 1,
            "type": "string",
            "example": "bob@watch-list.com"
          },
          "password": {
            "minLength": 1,
            "type": "string",
            "example": "password#1"
          }
        },
        "additionalProperties": false
      },
      "AuthenticateResponse": {
        "type": "object",
        "properties": {
          "bearerToken": {
            "type": "string",
            "nullable": true
          },
          "refreshToken": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CheckPasswordResetRequest": {
        "required": [
