        "type": "object",
        "properties": {
          "bearerToken": {
            "type": "string",
            "nullable": true
          },
          "refreshToken": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegisterRequest": {
        "required": [
          "emailAddress",
          "name",
          "password"
        ],
        "type": "object",
        "properties": {
          "emailAddress": {
            "minLength": 1,
            "type": "string",
            "example": "bob@watch-list.com"
          },
          "name": {
            "minLength": 1,
            "type": "string",
            "example": "bob"
          },
          "password": {
